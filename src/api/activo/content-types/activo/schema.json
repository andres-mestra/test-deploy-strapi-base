{
  "kind": "collectionType",
  "collectionName": "activos",
  "info": {
    "singularName": "activo",
    "pluralName": "activos",
    "displayName": "activo"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "placa": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": false
    },
    "warrantyDate": {
      "type": "date",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "state": {
      "type": "enumeration",
      "enum": [
        "bueno",
        "malo",
        "reparacion",
        "desuso"
      ],
      "required": true
    },
    "image": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
